   <PasswordField fx:id="tfConfirmPassword" layoutX="423.0" layoutY="154.0" />
   <Label layoutX="312.0" layoutY="95.0" text="new password :" />
   <Label layoutX="281.0" layoutY="159.0" text="confirm password :" />
